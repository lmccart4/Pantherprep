rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Students can write their own profile
    match /students/{uid} {
      allow read: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    // Sessions - students write their own, teachers read all
    match /sessions/{sessionId} {
      allow read: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
      allow create: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
    }
    // Question analytics - any authenticated user can read/write
    match /questionStats/{qId} {
      allow read: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
      allow write: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
    }
    // Custom questions - any authenticated paps.net user can read, teachers can write
    match /customQuestions/{qId} {
      allow read: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
      allow create: if request.auth != null && request.auth.token.email.matches('.*@paps\\.net$');
    }
  }
}
